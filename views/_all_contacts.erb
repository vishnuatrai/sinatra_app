<table class="table table-striped table-bordered">
  <tbody>
  <% AddContact.sort_usernames(@user.friends).each do |friend| %>
      <tr class="friends_list" id='<%= "#{friend.id}" %>'>
        <td style="width:80%">
          <%= friend.first_name ? friend.first_name.capitalize : friend.name %>
        </td>
        <td style="width: 20%;border-left: 0px;">
          <a href="#" class="edit_contact" id='<%= "#{friend.id}" %>' style="float:right;display: none;">
            <img src="/vendor/bootstrap/img/gear.png" style="height:15px;"/>
          </a>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<div id="dialog-form_user_details" style="width:500px">

</div>


<script>
  $(document).ready(function(){
      $(".friends_list").hover(function(){
         $(this).children().find("a").show();
              },
              function () {
                  $(this).children().find("a").hide();
              }
      );


  });
</script>